@if (
TempData["SuccessMessage"] != null ||
TempData["ErrorMessage"] != null ||
TempData["WarningMessage"] != null ||
TempData["InfoMessage"] != null
)
{
    if (TempData["SuccessMessage"] != null)
    {
        <script>
            $(document).ready(function () {
                showMessage('پیام موفقیت', '@TempData["SuccessMessage"]', 'success');
            });
        </script>
    }

    if (TempData["ErrorMessage"] != null)
    {
        <script>
            $(document).ready(function () {
                showMessage('پیام خطا', '@TempData["ErrorMessage"]', 'error');
            })
        </script>
    }

    if (TempData["WarningMessage"] != null)
    {
        <script>
            $(document).ready(function () {
                showMessage('پیام اخطار', '@TempData["WarningMessage"]', 'warning');
            })
        </script>
    }

    if (TempData["InfoMessage"] != null)
    {
        <script>
            $(document).ready(function () {
                showMessage('پیام اطلاعیه', '@TempData["InfoMessage"]', 'info');
            })
        </script>
    }
}