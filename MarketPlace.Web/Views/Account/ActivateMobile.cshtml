@model MarketPlace.DataLayer.DTOs.Account.ActivateMobileDTO;
@{
    ViewData["Title"] = "فعالسازی حساب کاربری";
}

@section scripts{
    <partial name="_JqueryValidators" />
    <partial name="_CaptchaScripts" />
}

<!--breadcrumbs area start-->
<div class="breadcrumbs_area">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="breadcrumb_content">
                    <ul>
                        <li><a href="index.html">خانه</a></li>
                        <li>@ViewData["Title"]</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<!--breadcrumbs area end-->
<!-- customer activate mobile start -->
<div class="customer_login mt-60">
    <div class="container">
        <div class="row">
            <!--activate mobile area start-->
            <div class="col-lg-6 col-md-6 offset-lg-3 offset-md-3">
                <div class="account_form register">
                    <h2>@ViewData["Title"]</h2>
                    <form method="post" asp-controller="Account" asp-action="ActivateMobile">
                        <partial name="_CaptchaInput" />
                        <input type="hidden" asp-for="Mobile" />
                        <p>
                            <label>کد تایید <span>*</span></label>
                            <input asp-for="MobileActiveCode" type="text">
                            <span asp-validation-for="MobileActiveCode" class="text-danger"></span>
                        </p>

                        <div class="login_submit">
                            <button type="submit">ارسال</button>
                        </div>
                    </form>
                </div>
            </div>
            <!--activate mobile area end-->
        </div>
    </div>
</div>
