@model MarketPlace.DataLayer.DTOs.RegisterUserDTO;
@{
    ViewData["Title"] = "Register";
}

<partial name="_JqueryValidators" />

<!--breadcrumbs area start-->
<div class="breadcrumbs_area">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="breadcrumb_content">
                    <ul>
                        <li><a href="index.html">خانه</a></li>
                        <li>ثبت نام</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<!--breadcrumbs area end-->
<!-- customer login start -->
<div class="customer_login mt-60">
    <div class="container">
        <div class="row">
            <!--login area start-->
            <!--register area start-->
            <div class="col-lg-6 col-md-6 offset-lg-3 offset-md-3">
                <div class="account_form register">
                    <h2>ثبت نام</h2>
                    <form asp-controller="Account" asp-action="register">
                        <p>
                            <label>نام <span>*</span></label>
                            <input asp-for="FirstName" type="text">
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </p>
                        <p>
                            <label>نام خانوادگی <span>*</span></label>
                            <input asp-for="LastName" type="text">
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </p>
                        <p>
                            <label>تلفن همراه <span>*</span></label>
                            <input asp-for="Mobile" type="text">
                            <span asp-validation-for="Mobile" class="text-danger"></span>
                        </p>
                        <p>
                            <label>رمز عبور <span>*</span></label>
                            <input asp-for="Password" type="password">
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </p>
                        <p>
                            <label>تکرار رمز عبور <span>*</span></label>
                            <input asp-for="ConfirmPassword" type="password">
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </p>
                        <div class="login_submit">
                            <button type="submit">ثبت نام</button>
                        </div>
                    </form>
                </div>
            </div>
            <!--register area end-->
        </div>
    </div>
</div>
<!-- customer login end -->
