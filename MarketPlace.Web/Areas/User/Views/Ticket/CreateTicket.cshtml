@using MarketPlace.DataLayer.Entities.Contacts;
@model MarketPlace.DataLayer.DTOs.Contacts.CreateTicketDTO;
@{
    ViewData["Title"] = "تغییر تیکت جدید ";
}

@section scripts{
    <partial name="_JqueryValidators" />
}

<!--breadcrumbs area start-->
<div class="breadcrumbs_area">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="breadcrumb_content">
                    <ul>
                        <li><a href="/">خانه</a></li>
                        <li>@ViewData["Title"]</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<!--breadcrumbs area end-->
<!-- my account start  -->
<section class="main_content_area">
    <div class="container">
        <div class="account_dashboard">
            <div class="row">
                <div class="col-sm-12 col-md-3 col-lg-3">
                    <!-- Nav tabs -->
                    @await Component.InvokeAsync("UserSidebar")
                </div>
                <div class="col-sm-12 col-md-9 col-lg-9">
                    <!-- Tab panes -->
                    <div class="tab-content dashboard_content">
                        <div class="tab-pane fade show active" id="account-details">
                            <h3>@ViewData["Title"]</h3>
                            <div class="login">
                                <div class="login_form_container">
                                    <div class="account_login_form">
                                        <form asp-area="User" asp-controller="Ticket" asp-action="CreateTicket">
                                            <label>عنوان</label>
                                            <input type="text" asp-for="Title" />
                                            <span asp-validation-for="Title" class="text-danger"></span>
                                            <br />
                                            <label>بخش مورد نظر</label>
                                            <select class="form-control" asp-for="TicketSection" asp-items="Html.GetEnumSelectList<TicketSection>()"></select>
                                            <span asp-validation-for="TicketSection" class="text-danger"></span>
                                            <br />
                                            <label>اولویت</label>
                                            <select class="form-control" asp-for="TicketPriority" asp-items="Html.GetEnumSelectList<TicketPriority>()"></select>
                                            <span asp-validation-for="TicketPriority" class="text-danger"></span>
                                            <br />
                                            <label>متن پیام</label>
                                            <textarea class="form-control" asp-for="Text" rows="5"></textarea>
                                            <span asp-validation-for="TicketPriority" class="text-danger"></span>
                                            <br />
                                            <div class="save_button primary_btn default_button">
                                                <button type="submit">ثبت</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- my account end   -->
